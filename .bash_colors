if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		RED=$(tput setaf 196)
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 10)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 255)
	else
		RED=$(tput setaf 1)
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 3)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 4)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	RED="\033[1;91m"
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[1;37m"
	BOLD=""
	RESET="\033[m"
fi
